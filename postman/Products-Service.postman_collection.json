{
  "info": {
    "name": "Products Service",
    "description": "Collection covering all requirements from the assignment: create, read (paginated), update, delete; validation; error handling; edge cases.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "productId", "value": "" },
    { "key": "productToken", "value": "" },
    { "key": "nonExistentId", "value": "00000000-0000-0000-0000-000000000001", "description": "UUID that does not exist; use in 404 tests (Update/Delete)." }
  ],
  "item": [
    {
      "name": "Success",
      "item": [
        {
          "name": "Create product",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "pm.collectionVariables.set('productToken', 'SKU-' + Date.now());"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 201', function () { pm.response.to.have.status(201); });",
                  "pm.test('Body has id and productToken', function () {",
                  "  const j = pm.response.json();",
                  "  const expectedToken = pm.collectionVariables.get('productToken');",
                  "  pm.expect(j).to.have.property('id');",
                  "  pm.expect(j).to.have.property('productToken', expectedToken);",
                  "  if (j.id) pm.collectionVariables.set('productId', j.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productToken\": \"{{productToken}}\",\n  \"name\": \"Product One\",\n  \"price\": \"29.99\",\n  \"stock\": 100\n}"
            },
            "url": "{{baseUrl}}/products",
            "description": "201 Created — new product. Tests save returned `id` into collection variable `productId` for Update/Delete."
          }
        },
        {
          "name": "List products (default pagination)",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 200', function () { pm.response.to.have.status(200); });", "pm.test('Body has products, page, limit, total, totalPages', function () { const j = pm.response.json(); pm.expect(j).to.have.keys('products','page','limit','total','totalPages'); pm.expect(j.products).to.be.an('array'); });"], "type": "text/javascript" } }],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products",
            "description": "200 OK — response: { products, page, limit, total, totalPages } with default page=1, limit=10."
          }
        },
        {
          "name": "List products (page and limit)",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 200', function () { pm.response.to.have.status(200); });", "pm.test('Body has pagination shape', function () { const j = pm.response.json(); pm.expect(j).to.have.property('page', 1); pm.expect(j).to.have.property('limit', 10); });"], "type": "text/javascript" } }],
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            },
            "description": "200 OK — paginated list."
          }
        },
        {
          "name": "List products (empty result)",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 200', function () { pm.response.to.have.status(200); });", "pm.test('Body has products array', function () { pm.expect(pm.response.json().products).to.be.an('array'); });"], "type": "text/javascript" } }],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products?page=99&limit=10",
            "description": "200 OK — empty products array when page beyond data (or when DB has no products); total may be 0."
          }
        },
        {
          "name": "Update product (single field - stock)",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 200', function () { pm.response.to.have.status(200); });", "pm.test('Body has updated stock', function () { pm.expect(pm.response.json()).to.have.property('stock', 50); });"], "type": "text/javascript" } }],
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"stock\": 50\n}" },
            "url": "{{baseUrl}}/products/{{productId}}",
            "description": "200 OK — update stock only (per assignment). Uses productId."
          }
        },
        {
          "name": "Update product (multiple fields)",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 200', function () { pm.response.to.have.status(200); });", "pm.test('Body has updated fields', function () { const j = pm.response.json(); pm.expect(j.name).to.eql('Product One Updated'); pm.expect(j.stock).to.eql(25); });"], "type": "text/javascript" } }],
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Product One Updated\",\n  \"price\": \"24.99\",\n  \"stock\": 25\n}"
            },
            "url": "{{baseUrl}}/products/{{productId}}",
            "description": "200 OK — partial update. Uses productId."
          }
        },
        {
          "name": "Delete product",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 204', function () { pm.response.to.have.status(204); });"], "type": "text/javascript" } }],
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/products/{{productId}}",
            "description": "204 No Content — product removed. Uses productId."
          }
        }
      ]
    },
