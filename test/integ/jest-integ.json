{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../..",
  "roots": ["<rootDir>/test/integ"],
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "testMatch": ["**/*.test.ts", "**/*.spec.ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "detectOpenHandles": true,
  "forceExit": true
}
