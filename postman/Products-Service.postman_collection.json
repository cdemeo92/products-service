    {
      "name": "Edge cases & validation",
      "item": [
        {
          "name": "400 - List invalid page (zero or negative)",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 400', function () { pm.response.to.have.status(400); });", "pm.test('Body has error', function () { pm.expect(pm.response.json()).to.have.property('error'); });"], "type": "text/javascript" } }],
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/products?page=0&limit=10", "host": ["{{baseUrl}}"], "path": ["products"], "query": [{ "key": "page", "value": "0" }, { "key": "limit", "value": "10" }] },
            "description": "400 Bad Request — page should be >= 1 (validated)."
          }
        },
        {
          "name": "400 - List invalid limit (zero or negative)",
          "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status is 400', function () { pm.response.to.have.status(400); });", "pm.test('Body has error', function () { pm.expect(pm.response.json()).to.have.property('error'); });"], "type": "text/javascript" } }],
