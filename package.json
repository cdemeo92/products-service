{
  "name": "products-service",
  "version": "1.2.6",
  "author": "Claudio De Meo",
  "license": "ISC",
  "description": "NestJS backend microservice for an e-commerce platform to manage products in the database.",
  "engines": {
    "node": ">=24",
    "npm": ">=11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdemeo92/products-service.git"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit --coverageReporters=json-summary --coverageReporters=html",
    "test:integ": "jest --config test/integ/jest-integ.json",
    "test:e2e": "jest --config test/e2e/jest-e2e.json",
    "test:all": "npm test && npm run test:integ && npm run test:e2e",
    "migrate": "sequelize-cli db:migrate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "release": "semantic-release",
    "prepare": "husky",
    "audit:ci": "better-npm-audit audit -p"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "@nestjs/sequelize": "^11.0.1",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/terminus": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.4",
    "mysql2": "^3.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^11.1.13",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.3",
    "@testcontainers/mysql": "^11.11.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "@types/supertest": "^6.0.3",
    "better-npm-audit": "^3.11.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "sequelize-cli": "^6.6.5",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
